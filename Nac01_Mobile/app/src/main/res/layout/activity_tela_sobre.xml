<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaSobre">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:text="Controle de Acesso aos Portais"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#F5F42615"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:layout_marginTop="30sp"
                  android:text="Portal Mercado Livre: "
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#000"
                  android:id="@+id/txtMercado"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:layout_marginTop="30sp"
                  android:text="Portal Netshoes: "
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#000"
                  android:id="@+id/txtNetshoes"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:layout_marginTop="30sp"
                  android:text="Portal Buscapé: "
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#000"
                  android:id="@+id/txtBuscape"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:layout_marginTop="30sp"
                  android:text="Portal Americanas: "
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#000"
                  android:id="@+id/txtAmericanas"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:layout_marginTop="30sp"
                  android:text="Portal Ebay: "
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#000"
                  android:id="@+id/txtEbay"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="35sp"
                  android:layout_marginTop="30sp"
                  android:text="Portal Magalu: "
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#000"
                  android:id="@+id/txtMagalu"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:text="Aluno: Pedro de Sousa Martins  RM83224"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:layout_marginTop="20sp"
                  android:textColor="#000"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Limpar Estatísticas"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:id="@+id/btLimpar"
                android:textColor="#F5F42615"/>



    </LinearLayout>

</ScrollView>